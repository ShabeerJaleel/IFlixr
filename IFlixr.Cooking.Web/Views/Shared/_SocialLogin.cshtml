<div class="row-fluid bottom-line">
    <h5>
        Sign in using social network (Recommended):</h5>
    <form method="post" action="/Account/ExternalLogin/" @*data-bind="submit: signin"*@ accept-charset="UTF-8">
    <div class="row-fluid">
        <button class="btn btn-primary span6" type="submit" name="provider" value="facebook">
            <i class="icon-facebook icon-box"></i>Login with Facebook</button>
        <button class="btn btn-primary span6" type="submit" name="provider" value="twitter">
            <i class="icon-twitter icon-box"></i>Login with Twitter</button>
        <div class="gap gap-tiny">
        </div>
    </div>
    <div class="row-fluid">
        <button class="btn btn-primary span6" type="submit" name="provider" value="google-plus">
            <i class="icon-google-plus icon-box"></i>Login with Google</button>
        <button class="btn btn-primary span6" type="submit" name="provider" value="skype">
            <i class="icon-skype icon-box"></i>Login with Yahoo</button>
    </div>
    </form>
</div>
